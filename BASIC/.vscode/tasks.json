{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "COMPILE",
            "type": "shell",
            "windows": {
                "command": "petcat -2 -w2 -o ${fileDirname}/${fileBasenameNoExtension}.prg -- ${file}"
            },
            "osx": {
                "command": "petcat -2 -w2 -o ${fileDirname}/${fileBasenameNoExtension}.prg -- ${file}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${cwd}"
            },
            "problemMatcher": []
        },
        {
            "label": "Run in VICE",
            "type": "shell",
            "windows": {
                "command": "x64sc -autostartprgmode 1 ${fileDirname}/${fileBasenameNoExtension}.prg"            
            },
            "osx": {
                "command": "/usr/local/Cellar/vice/3.6/bin/x64sc -autostartprgmode 1 ${fileDirname}/${fileBasenameNoExtension}.prg"            
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },            
            "options": {
                "cwd": "${cwd}"
            },
            "problemMatcher": []
        }
    ]
}